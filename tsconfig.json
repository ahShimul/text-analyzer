{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "jest"],
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
